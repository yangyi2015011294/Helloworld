<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!-- 结果显示框 -->
    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:cursorVisible="false"
        android:gravity="right"
        android:text="0" />
    <!-- 接下去采TableRow的格式进行布局设计 -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 用于显示存储结果 -->
        <TextView
            android:layout_width="65sp"
            android:layout_height="50sp"
            android:text="  MEM :"
            />
        <!-- 默认显示字符串0 -->
        <TextView
            android:id="@+id/mem"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:text="0"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 显示当前是角度还是弧度，默认是角度 -->
        <TextView android:id="@+id/_drg"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:text="   DEG"
            />
        <!-- 清除存储结果 -->
        <Button
            android:id="@+id/mc"
            android:layout_width="106sp"
            android:layout_height="50sp"
            android:text="MC" />
        <!-- 清除输出窗口的所有内容 -->
        <Button
            android:id="@+id/c"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:text="C" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 在角度和弧度之间切换 -->
        <Button
            android:id="@+id/drg"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="DRG" />
        <!-- 正弦计算 -->
        <Button
            android:id="@+id/sin"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="sin" />
        <!-- 余弦计算 -->
        <Button
            android:id="@+id/cos"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="cos" />
        <!-- 正切计算 -->
        <Button
            android:id="@+id/tan"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="tan" />
        <!-- 阶乘计算 -->
        <Button
            android:id="@+id/factorial"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="n!" />
        <!-- 退格键 -->
        <Button
            android:id="@+id/bksp"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="Bksp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字7 -->
        <Button
            android:id="@+id/seven"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="7" />
        <!-- 数字8 -->
        <Button
            android:id="@+id/eight"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="8" />
        <!-- 数字9 -->
        <Button
            android:id="@+id/nine"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="9" />
        <!-- 除号 -->
        <Button
            android:id="@+id/divide"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="÷" />
        <!-- 左括号 -->
        <Button
            android:id="@+id/left"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="(" />
        <!-- 右括号 -->
        <Button
            android:id="@+id/right"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text=")" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字4 -->
        <Button
            android:id="@+id/four"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="4" />
        <!-- 数字5 -->
        <Button
            android:id="@+id/five"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="5" />
        <!-- 数字6 -->
        <Button
            android:id="@+id/six"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="6" />
        <!-- 乘号 -->
        <Button
            android:id="@+id/mul"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="×" />
        <!-- 开方 -->
        <Button
            android:id="@+id/sqrt"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="√" />
        <!-- 乘方 -->
        <Button
            android:id="@+id/square"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="^" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字1 -->
        <Button
            android:id="@+id/one"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="1" />
        <!-- 数字2 -->
        <Button
            android:id="@+id/two"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="2" />
        <!-- 数字3 -->
        <Button
            android:id="@+id/three"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="3" />
        <!-- 减号 -->
        <Button
            android:id="@+id/sub"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="-" />
        <!-- 对数 -->
        <Button
            android:id="@+id/log"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="log" />
        <!-- 自然对数 -->
        <Button
            android:id="@+id/ln"
            android:layout_width="65sp"
            android:layout_height="80sp"
            android:text="ln" />
    </TableRow>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="57sp"
        >
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <!-- 数字0 -->
            <Button
                android:id="@+id/zero"
                android:layout_width="65sp"
                android:layout_height="80sp"
                android:text="0" />
            <!-- 小数点 -->
            <Button
                android:id="@+id/dot"
                android:layout_width="65sp"
                android:layout_height="80sp"
                android:text="." />
            <!-- 等号 -->
            <Button
                android:id="@+id/equal"
                android:layout_width="65sp"
                android:layout_height="80sp"
                android:text="=" />
            <!-- 加号 -->
            <Button
                android:id="@+id/add"
                android:layout_width="65sp"
                android:layout_height="80sp"
                android:text="+" />
            <!-- 退出计算器 -->
            <Button
                android:id="@+id/exit"
                android:layout_width="130sp"
                android:layout_height="80sp"
                android:text="exit" />
        </TableRow>
    </TableLayout>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 用于提示，告诉用户如何使用计算器的一些功能等 -->
        <TextView android:id="@+id/T"
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:text="提示："
            />

        <TextView
            android:id="@+id/tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="欢迎使用！" />
    </TableRow>

</LinearLayout>

